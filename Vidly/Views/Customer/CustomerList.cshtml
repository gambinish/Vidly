@model Vidly.ViewModels.CustomerViewModel

@{
    ViewBag.Title = "Customer";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Customers</h2>

@if (Model.Customer.Count == 0)
{
    <text>There are no customers in the database!!</text>
}
else 
{
    <ul>
        @foreach (var customer in Model.Customer)
        {
            <li>@customer.Name @customer.Last</li>
        }
    </ul>
}